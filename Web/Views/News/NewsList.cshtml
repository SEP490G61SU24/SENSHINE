<script>

    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this item?')) {
            // Redirect to the delete action with the item Id
            window.location.href = '@Url.Action("Delete", "News")/' + id;
        }
    }
</script>

<script>
    $(document).ready(function () {
        $(".newsTitle").click(function (event) {
            event.preventDefault();
            var newsId = $(this).data("id");

            $.ajax({
                url: '/News/GetNewsDetail/' + newsId,
                method: 'GET',
                success: function (data) {
                    $("#newsImage").attr("src", data.cover || 'https://wallpapercave.com/wp/wp3265462.jpg');
                    $("#newsTitle").text(data.title);
                    $("#newsDescription").text(data.content);
                    $("#newsDate").text(new Date(data.publishedDate).toLocaleDateString());
                },
                error: function () {
                    alert("An error occurred while fetching the news details.");
                }
            });
        });
    });

   
</script>
