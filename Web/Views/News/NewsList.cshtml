                <p id="newsId"></p>
                <h4 id="newsTitle">Title</h4>
                <p id="newsDescription">Description</p>
                <p id="newsDate" class="date">Date</p>
                <div style="display: flex; gap: 10px;">
                    <button id="editNewsBtn" class="btn btn-primary" style="height: 35px; width: 150px;">Edit</button>
                    <button id="deleteNewsBtn" class="btn btn-danger" data-id="" onclick="confirmDelete(this)" style="height: 35px; width: 150px;">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>





