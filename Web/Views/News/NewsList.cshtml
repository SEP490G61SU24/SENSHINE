<style>
    .news-container {
        display: flex;
        align-items: flex-start;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        gap: 20px;
    }

    .news-image img {
        width: 350px;
        height: 250px;
        border-radius: 8px;
        object-fit: cover;
        border: 5px solid black; /* Add black border to the image */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add shadow to the image */
    }


    .news-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
        max-width: 600px;
    }

        .news-info h4 {
            font-size: 24px;
            color: #333;
        }

        .news-info p {
            margin: 0;
            color: #555;
        }

            .news-info p.date {
                font-size: 14px;
                color: #999;
            }
</style>

