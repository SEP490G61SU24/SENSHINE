<script>
    $(document).ready(function () {
        $(".newsTitle").click(function (event) {
            event.preventDefault();
            var newsId = $(this).data("id");

            $.ajax({
                url: '/News/GetNewsDetail/' + newsId,
                method: 'GET',
                success: function (data) {
                    // Set default values for properties
                    var coverImage = data.cover || 'https://via.placeholder.com/150';
                    var title = data.title || 'No Title';
                    var content = data.content || 'No Content';
                    var publishedDate = data.publishedDate ? new Date(data.publishedDate).toLocaleDateString() : 'No Published Date';

                    // Update HTML elements with the API data
                    $("#newsImage").attr("src", coverImage);
                    $("#newsTitle").text('Tilte: ' + title);
                    $("#newsDescription").text('Description: ' + content);
                    $("#newsDate").text('Published Date: '+ publishedDate);
                    $("#newsId").text('News ID: ' + newsId);
                    $("#deleteNewsBtn").attr("data-id", newsId);

                    // Update edit button to redirect to edit page
                    $("#editNewsBtn").click(function () {
                        window.location.href = '/News/Edit/' + newsId;
                    });
                },
                error: function () {
                    alert("An error occurred while fetching the news details.");
                }
            });
        });
    });


    function confirmDelete(button) {
        var newsId = $(button).data("id");

        if (confirm("Are you sure you want to delete this news item?")) {
            $.ajax({
                url: '/News/Delete/' + newsId,
                method: 'DELETE',
                success: function (response) {
                    if (response.success) {
                        alert("News item deleted successfully.");
                        window.location.reload();
                    } else {
                        alert("Failed to delete the news item.");
                    }
                },
                error: function () {
                    alert("An error occurred while deleting the news item.");
                }
            });
        }
    }

</script>
<script>
    function fetchNewsByDate() {
        var fromDate = $('#fromDate').val();
        var toDate = $('#toDate').val();
        if (!toDate) {
            var now = new Date();
            toDate = now.toISOString().slice(0, 10);
            document.getElementById('toDate').value = toDate;
        }
        if (fromDate && toDate) {
            $.ajax({
                url: '/News/NewsByDate',
                method: 'GET',
                data: { from: fromDate, to: toDate },
                success: function (data) {
                    var newsTableBody = $("#project-status tbody");
                    newsTableBody.empty();

                    data.forEach(function (news) {
                        var newsRow = `
                            <tr>
                                <td>
                                    <div class="product-names">
                                        <div class="light-product-box">
                                            <img class="img-fluid" src="${news.cover ? news.cover : 'https://via.placeholder.com/150'}" alt="Image">
                                        </div>
                                        <a href="#" class="newsTitle" data-id="${news.idNew}">${news.title}</a>
                                    </div>
                                </td>
                                <td>${new Date(news.publishedDate).toLocaleDateString()}</td>
                            </tr>
                        `;
                        newsTableBody.append(newsRow);
                    });

                    // Re-bind the click event for the news titles
                    $(".newsTitle").click(function (event) {
                        event.preventDefault();
                        var newsId = $(this).data("id");

                        $.ajax({
                            url: '/News/GetNewsDetail/' + newsId,
                            method: 'GET',
                            success: function (data) {
                                // Set default values for properties
                                var coverImage = data.cover || 'https://via.placeholder.com/150';
                                var title = data.title || 'No Title';
                                var content = data.content || 'No Content';
                                var publishedDate = data.publishedDate ? new Date(data.publishedDate).toLocaleDateString() : 'No Published Date';

                                // Update HTML elements with the API data
                                $("#newsImage").attr("src", coverImage);
                                $("#newsTitle").text('Title: ' + title);
                                $("#newsDescription").text('Description: ' + content);
                                $("#newsDate").text('Published Date: ' + publishedDate);
                                $("#newsId").text('News ID: ' + newsId);
                                $("#deleteNewsBtn").attr("data-id", newsId);

                                // Update edit button to redirect to edit page
                                $("#editNewsBtn").click(function () {
                                    window.location.href = '/News/Edit/' + newsId;
                                });
                            },
                            error: function () {
                                alert("An error occurred while fetching the news details.");
                            }
                        });
                    });
                },
                error: function () {
                    alert("An error occurred while fetching the news list.");
                }
            });
        } else {
            alert("Please select both from and to dates.");
        }
    }

</script>