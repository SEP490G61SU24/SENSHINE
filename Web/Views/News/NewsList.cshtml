<style>
    .news-container {
        display: flex;
        align-items: flex-start;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        gap: 20px;
    }

    .news-image img {
        width: 350px;
        height: 250px;
        border-radius: 8px;
        object-fit: cover;
        border: 5px solid black; /* Add black border to the image */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add shadow to the image */
    }


    .news-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
        max-width: 600px;
    }

        .news-info h4 {
            font-size: 24px;
            color: #333;
        }

        .news-info p {
            margin: 0;
            color: #555;
        }

            .news-info p.date {
                font-size: 14px;
                color: #999;
            }
</style>

@model IEnumerable<Web.Models.NewsViewModel>
<div class="card">
    <div class="card-body">
        <div class="news-container">
            <div class="news-image">
                <img id="newsImage" src="#" alt="News Image">
            </div>
            <div class="news-info">
                <h4 id="newsTitle">Title</h4>
                <p id="newsDescription">Description</p>
                <p id="newsDate" class="date">Date</p>
               
            </div>
        </div>
    </div>
</div>





<div class="card">
    <div class="card-body">

        <div class="list-product-header">
            <div>
                <div class="light-box">
                    <a data-bs-toggle="collapse" href="list-products.html#collapseProduct"
                       role="button" aria-expanded="false" aria-controls="collapseProduct">
                        <i class="filter-icon show"
                           data-feather="filter"></i><i class="icon-close filter-close hide"></i>
                    </a>
                </div>
                <a class="btn btn-primary" href="@Url.Action("Add", "News")"><i class="fa fa-plus"></i>Add News</a>
            </div>
            <div class="collapse" id="collapseProduct">
                <div class="card card-body list-product-body">
                    <div class="row row-cols-xl-5 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-3">
                        <div class="col">
                            <select class="form-select" aria-label="Default select example">
                                <option selected="">Date To</option>

                            </select>
                        </div>
                        <div class="col">
                            <select class="form-select" aria-label="Default select example">
                                <option selected="">Date From</option>

                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="list-product">
            <table class="table" id="project-status">
                <thead>
                    <tr>
                        <th>
                            <div class="form-check">
                                <input class="form-check-input checkbox-primary" type="checkbox">
                            </div>
                        </th>
                       
                        <th> <span class="f-light f-w-600">Title</span></th>
                        <th> <span class="f-light f-w-600"> Date Post </span></th>
                        <th> <span class="f-light f-w-600"> Action </span></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                <div class="product-names">
                                    <div class="light-product-box">
                                        <img class="img-fluid"
                                             src="@(!string.IsNullOrEmpty(item.Cover) ? item.Cover : "https://media.bongda.com.vn/files/quan.le/2017/02/02/vi-dai-frank-lampard-1-2138.jpg")"
                                             alt="Image">
                                    </div>
                                <a href="#" class="newsTitle" data-id="@item.IdNew">@item.Title</a></td>
                            <td>@item.PublishedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="product-action">
                                    <a href="@Url.Action("Edit", "News", new { id = item.IdNew })" class="btn btn-primary">Edit</a>
                                    <a href="javascript:void(0);" class="btn btn-secondary" onclick="confirmDelete('@item.IdNew')">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
