<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        var file = event.target.files[0];
        var reader = new FileReader();

        reader.onload = function (e) {
            // Tạo một phần tử img và đặt thuộc tính src
            var img = document.createElement('img');
            img.src = e.target.result;
            img.width = 200; // Đặt kích thước của ảnh để xem trước
            img.style.marginTop = '10px'; // Tạo khoảng cách giữa ảnh và input

            // Cập nhật nội dung của phần tử p với URL hình ảnh
            //var imageUrlElement = document.getElementById('imageUrl');
            //imageUrlElement.textContent = 'Image URL: ' + e.target.result;

            // Xóa các ảnh đã có trong khu vực xem trước
            var preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            preview.appendChild(img);
        };

        reader.readAsDataURL(file);
    });
</script>
