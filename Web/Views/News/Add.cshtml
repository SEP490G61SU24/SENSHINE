<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>News Form</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row g-3">
                            @* <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdNew" class="control-label">ID</label>
                                    <input asp-for="IdNew" class="form-control" />
                                    <span asp-validation-for="IdNew" class="text-danger"></span>
                                </div>
                            </div> *@
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label">Title</label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            

                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PublishedDate" class="control-label">Published Date</label>
                                    <input asp-for="PublishedDate" type="date" class="form-control" />
                                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="product-upload">
                                        <input type="file" id="imageInput" accept="image/*">
                                        <div id="imagePreview"></div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Cover" class="control-label">Cover</label>
                                    <textarea asp-for="Cover" class="form-control" rows="1"></textarea>
                                    <span asp-validation-for="Cover" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Content" class="control-label">Content</label>
                                    <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group d-flex">
                                    <input type="submit" value="Create" class="btn btn-primary spacing-10px" />
                                    <a asp-action="NewsList" class="btn btn-secondary spacing-10px">Back to List</a>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



