    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">

    <style>
        .bold-black-option {
            color: black;
            font-weight: bold;
        }

        /* Apply to all select elements */
        select.form-select {
            font-weight: bold;
            color: black;
        }

            /* Apply specifically to placeholder option */
            select.form-select option:disabled {
                font-weight: bold;
                color: black;
            }
    </style>
