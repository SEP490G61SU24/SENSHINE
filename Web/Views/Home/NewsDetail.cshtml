    <style>
        .news-detail-container {
            max-width: 750px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .news-title {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #333;
        }

        .news-detail-image {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .news-date {
            font-size: 0.9rem;
            color: #999;
            margin-bottom: 20px;
        }

        .news-content {
            font-size: 1rem;
            color: #666;
        }

        .card-with-border {
            border: 1px solid #ddd;
            transition: transform 0.2s ease-in-out;
        }

            .card-with-border:hover {
                transform: scale(1.05);
            }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card {
            margin-bottom: 0 !important;
        }

        .card-text {
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .news-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .news-item-link {
            display: block;
            width: 100%;
            text-decoration: none;
            color: inherit;
        }

        .news-item {
            display: flex;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
            width: 100%;
            max-width: 750px;
            padding: 15px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .news-item img {
                width: 230px;
                height: 150px;
                object-fit: cover;
                border-radius: 8px;
                margin-right: 15px;
            }

            .news-item:hover {
                transform: scale(1.02);
            }

        .news-content {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .news-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .news-description {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 10px;
        }

        .news-date {
            font-size: 0.8rem;
            color: #999;
        }

        .sidebar {
            width: 300px;
            margin-left: 30px;
        }

        .latest-post {
            display: flex;
            margin-bottom: 20px;
        }

            .latest-post img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border-radius: 8px;
                margin-right: 10px;
            }

        .latest-post-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .latest-post-title {
            font-size: 0.9rem;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .latest-post-date {
            font-size: 0.8rem;
            color: #999;
        }
    </style>
</head>
@model NewsViewModel
@{
    Layout = null;
}
<body class="landing-page">
    <div class="landing-home" id="home" style="height: 40%">
        <div class="container-fluid">
            <div class="sticky-header">
                <header>
                    <nav class="navbar navbar-b navbar-dark navbar-trans navbar-expand-xl fixed-top nav-padding" id="sidebar-menu">
                        <a class="navbar-brand p-0" href="@Url.Action("HomePage", "Home")">
                            <img class="img-100 img-h-100" src="~/assets/images/landing/landinglogo.png" alt="">
                        </a>
                        <button class="navbar-toggler navabr_btn-set custom_nav" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation"><span></span><span></span><span></span></button>
                        <div class="navbar-collapse justify-content-center collapse hidenav" id="navbarDefault">
                            <ul class="navbar-nav navbar_nav_modify" id="scroll-spy">
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("NewsPage", "Home")">News</a></li>
                                <li class="nav-item"> <a class="nav-link" id="page" href="@Url.Action("OurService", "Home")">Our Services</a></li>
                                <li class="nav-item"> <a class="nav-link" id="page" href="@Url.Action("AboutUs", "Home")">About Us</a></li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span id="dropdownMenuButton">Sen Shine Spa</span>
                                    </a>
                                   
                                </li>
                            </ul>
                        </div>
                        <div class="buy-btn"><a class="nav-link js-scroll" target="_blank">Book Now</a></div>
                    </nav>
                </header>
            </div>
            <div class="row justify-content-center">
                <div class="content text-center">
                    <div>
                        <h1 class="text-center">
                            @Model.Title
                        </h1>
                    </div>
                </div>
                <div class="user-content">
                    <span class="text-center">.</span>
                </div>
            </div>
        </div>
    </div>

    <section class="intro-section" id="intro" style="padding: 50px 0; background-color: #F3FDFE;">
        <div class="container-fluid">
            <div class="news-detail-container">
                <img src="@Model.Cover" alt="News Image" class="news-detail-image">
                <p class="news-date">@Model.PublishedDate.ToString("MMM dd, yyyy")</p>
                <div class="news-content">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </section>
</body>

