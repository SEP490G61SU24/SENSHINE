                <!-- Main Content Section -->
                <div class="modal-lg col-lg-8 col-md-12">
                    <div class="news-container">
                        @foreach (var item in Model)
                        {
                            <a href="@Url.Action("NewsDetail", "News", new { id = item.IdNew })" class="news-item-link">
                                <div class="news-item">
                                    <img src="@item.Cover" alt="News Image">
                                    <div class="news-content">
                                        <h5 class="news-title">@item.Title</h5>
                                        <p class="news-description">
                                            @(item.Content.Length > 50 ? item.Content.Substring(0, 70) + "..." : item.Content)
                                        </p>
                                        <p class="news-date">@item.PublishedDate.ToString("MMM dd, yyyy") - @GetTimeAgo(item.PublishedDate)</p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>

                </div>
                <!-- Sidebar Section -->
                <div class="col-lg-4 col-md-12 sidebar">
                    <h4 class="mb-4">BÀI VIẾT MỚI</h4>
                    @foreach (var item in Model.Take(5))
                    {
                        <div class="latest-post">
                            <img src="@item.Cover" alt="Latest News Image">
                            <div class="latest-post-content">
                                <p class="latest-post-title">@item.Title</p>
