@{
    Layout = null;
}
@model IEnumerable<Web.Models.NewsViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta name="author" content="pixelstrap">
    <link rel="icon" href="~/assets/images/landing/landinglogo.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/assets/images/landing/landinglogo.png" type="image/x-icon">
    <title>SenShine Spa</title>
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,400i,500,500i,700,700i&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900&amp;display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/icofont.css">
    <link rel="icon" href="~/assets/svg/landing-icons.svg">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/styles_HomePage.css">
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">
     <style>
        .intro-section {
            padding: 50px 0;
            background-color: #f8f8f8;
        }

        .text-title {
            font-size: 2rem;
            color: #333;
            margin-bottom: 20px;
        }

        .text-description {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 20px;
        }

        .benefits-list {
            list-style-type: none;
            padding: 0;
        }

            .benefits-list li {
                font-size: 1.1rem;
                color: #333;
                margin-bottom: 10px;
            }

                .benefits-list li strong {
                    color: #006837;
                }

        .news-section {
            padding: 50px 0;
            background-color: #f8f8f8;
        }

        .news-box {
            background-color: #ffffff;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            transition: box-shadow 0.3s ease-in-out;
        }

            .news-box:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .news-image img {
            border-radius: 10px;
        }

        .news-title h6 {
            font-size: 1.1rem;
            color: #333;
            margin-top: 10px;
            text-align: center;
        }

        .news-title a {
            text-decoration: none;
            color: #333;
        }

            .news-title a:hover {
                color: #006837;
            }

</style>
</head>

<body class="landing-page">
    <!-- tap on top starts-->
    
    <!-- tap on tap ends-->
    <!-- page-wrapper Start-->
    <div class="landing-page">
        <span class="cursor"><span class="cursor-move-inner"><span class="cursor-inner"></span></span><span class="cursor-move-outer"><span class="cursor-outer"> </span></span></span>
        <!-- Page Body Start-->
        <div class="landing-home" id="home">
            <div class="container-fluid">
                <div class="sticky-header">
                    <header>
                        <nav class="navbar navbar-b navbar-dark navbar-trans navbar-expand-xl fixed-top nav-padding" id="sidebar-menu">
                            <a class="navbar-brand p-0" href="landing-page.html#">
                                <img class="img-fluid" src="~/assets/images/landing/landinglogo.png" alt="">
                            </a>
                            <button class="navbar-toggler navabr_btn-set custom_nav" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation"><span></span><span></span><span></span></button>
                            <div class="navbar-collapse justify-content-center collapse hidenav" id="navbarDefault">
                                <ul class="navbar-nav navbar_nav_modify" id="scroll-spy">
                                    <li class="nav-item"><a class="nav-link" href="@Url.Action("NewsPage", "Home")">News</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#">Promotions</a></li>
                                    <li class="nav-item"> <a class="nav-link" id="page" href="@Url.Action("OurService", "Home")">Our Services</a></li>
                                    <li class="nav-item"> <a class="nav-link" id="page" href="@Url.Action("AboutUs", "Home")">About Us</a></li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span id="dropdownMenuButton">Sen Shine Spa</span>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="landing-page.html#framework-saigon" onclick="updateDropdown('SenShineSpa_SaiGon')">Sen Shine Spa Wellness</a>
                                            <a class="dropdown-item" href="landing-page.html#framework-saigon" onclick="updateDropdown('SenShineSpa_SaiGon')">L’essence Sen Shine</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="buy-btn"><a class="nav-link js-scroll" href="https://themeforest.net/user/pixelstrap/portfolio" target="_blank">Book Now</a></div>
                        </nav>
                    </header>
                </div>
                <div class="row justify-content-center">
                    <div class="content text-center">
                        <div>
                            <h1 class="text-center">
                                The SenShine Spa
                            </h1>
                        </div>
                    </div>
                    <div class="user-content">
                        <span class="text-center">.</span>
                    </div>

                    <div class="star-animate">
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                        <div class="screen-1">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="img-fluid" src="~/assets/images/landing/demo/banner1.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="img-fluid" src="~/assets/images/landing/demo/banner3.png" alt="Second slide">
                                </div>

                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" id="prevBtn" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" id="nextBtn" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        
                    </div>

                </div>

            </div>
        </div>
        
        <section class="intro-section" id="intro" style="padding: 50px 0; background-color: #f8f8f8;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="https://le-cdn.hibuwebsites.com/0448e9cf581f4ecc89a66c438f1b5906/dms3rep/multi/opt/spa-tique-day-spa-hero-home-1920w.jpg" alt="Spa Image" class="img-fluid" style="border-radius: 10px;">
                    </div>
                    <div class="col-md-6">
                        <h2 class="text-title">Trải Nghiệm Spa Hoàn Hảo</h2>
                        <p class="text-description">Tại SenShine Spa, quý khách sẽ được tận hưởng những dịch vụ spa cao cấp với các liệu pháp truyền thống kết hợp với nguyên liệu tự nhiên, giúp thư giãn và phục hồi cơ thể. Với không gian sang trọng, yên tĩnh, và đội ngũ chuyên viên giàu kinh nghiệm, chúng tôi cam kết mang lại sự hài lòng tuyệt đối.</p>
                        <ul class="benefits-list">
                            <li><strong>Không gian:</strong> Sang trọng, đẳng cấp, yên tĩnh, nhẹ nhàng.</li>
                            <li><strong>Dịch vụ:</strong> Spa trị liệu bằng phương pháp cổ truyền.</li>
                            <li><strong>Nguyên liệu:</strong> Thảo dược hoàn toàn từ thiên nhiên.</li>
                            <li><strong>Con người:</strong> Thân thiện, nhẹ nhàng, giỏi chuyên môn.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <section class="news-section section-py-space" id="news" style="background-color: #e6f3f0;">
            <div class="container">
                <div class="title text-center">
                    <h5 style="color: #006837; font-weight: bold;">TIN TỨC</h5>
                    <h2 class="mb-lg-2 mb-0" style="font-size: 2.5rem; color: #333;">Looking News</h2>
                </div>
                <div class="row">
                    @if (Model.Any())
                    {
                        var newsList = Model.Take(6).ToList(); // Giới hạn 6 tin tức
                        foreach (var news in newsList)
                        {
                            <div class="col-md-4 col-sm-6 mb-4">
                                <div class="news-box" style="background-color: #fff; border: none; padding: 20px; text-align: center; border-radius: 15px;">
                                    <div class="news-image">
                                        <a href="@Url.Action("NewsDetail", "News", new { id = news.IdNew })">
                                            <img src="@(!string.IsNullOrEmpty(news.Cover) ? news.Cover : "https://via.placeholder.com/240x300")"
                                                 alt="@news.Title"
                                                 class="img-fluid"
                                                 style="height: 200px; object-fit: cover; border-radius: 15px;" />
                                        </a>
                                    </div>
                                    <div class="news-title mt-3">
                                        <a href="@Url.Action("NewsDetail", "News", new { id = news.IdNew })">
                                            <h6 style="color: #006837; font-weight: bold;">@news.Title</h6>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>



    </div>


        <!-- latest jquery-->
        <script src="~/assets/js/jquery-3.5.1.min.js"></script>
        <script src="~/assets/js/cursor/stats.min.js"> </script>
        <!-- Bootstrap js-->
        <script src="~/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
        <!-- feather icon js-->
        <script src="~/assets/js/icons/feather-icon/feather.min.js"></script>
        <script src="~/assets/js/icons/feather-icon/feather-icon.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <!-- Bootstrap js-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
       

</body>

</html>
<script>
    function updateDropdown(selectedText) {
        document.getElementById('dropdownMenuButton').textContent = selectedText;
    }
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('prevBtn').addEventListener('click', function () {
            var carousel = bootstrap.Carousel.getInstance(document.querySelector('#carouselExampleIndicators'));
            carousel.prev();
        });

        document.getElementById('nextBtn').addEventListener('click', function () {
            var carousel = bootstrap.Carousel.getInstance(document.querySelector('#carouselExampleIndicators'));
            carousel.next();
        });
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
