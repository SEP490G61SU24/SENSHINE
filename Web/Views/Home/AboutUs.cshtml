}

.et_pb_text_inner a:hover {
    text-decoration: underline;
}

.et_pb_image_wrap {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.et_pb_image_wrap img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
    transition: transform 0.3s ease;
}

.et_pb_image_wrap img:hover {
    transform: scale(1.05);
}

.et_pb_row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
}

.et_pb_column {
    padding: 0 15px;
