}

.et_pb_column_1_2 {
    width: 50%;
}

.et_pb_column_4_4 {
    width: 100%;
}

.media (max-width: 768px) {
    .et_pb_column_1_2 {
        width: 100%;
    }
}

.landing-home {
    position: relative;
    z-index: 1; /* Đảm bảo nó không đè lên các phần tử khác */
}

.et_pb_section {
    padding: 40px 30px; /* Thay đổi padding để tạo không gian thụt vào hai bên */
    margin: 0 auto; /* Căn giữa phần tử trong container */
}

.et_pb_row {
    margin: 0 -15px; /* Điều chỉnh margin để căn lề cho các cột */
}

.et_pb_column {
    padding: 0 15px; /* Padding để thụt vào hai bên */
    box-sizing: border-box;
}

.et_pb_text_inner {
    margin-top: 20px; /* Tăng giá trị margin-top để phần tử không bị đè */
}

.location-list {
    list-style: none; /* Loại bỏ các ký hiệu mặc định của danh sách */
    padding-left: 0; /* Loại bỏ khoảng cách bên trái */
}

.location-list li {
    position: relative; /* Để có thể đặt biểu tượng */
    padding-left: 30px; /* Tạo không gian cho biểu tượng */
    margin-bottom: 10px; /* Khoảng cách giữa các mục */
}

.location-list li::before {
    content: '\f041'; /* Unicode của biểu tượng địa điểm từ FontAwesome */
    font-family: 'Font Awesome 5 Free'; /* Font gia đình của FontAwesome */
    font-weight: 900; /* Font weight cho biểu tượng */
    position: absolute;
    left: 0;
    color: #701D0B;
    top: 0;
}

.et_pb_module.et_pb_text_1 a {
    color: #701D0B; /* Màu của liên kết */
    text-decoration: none; /* Loại bỏ gạch chân của liên kết */
}

.et_pb_module.et_pb_text_1 a:hover {
    text-decoration: underline; /* Gạch chân liên kết khi hover */
}

.et_pb_module.et_pb_text_1 {
    overflow: visible; /* Đảm bảo nội dung không bị ẩn */
    height: auto; /* Đảm bảo chiều cao tự động để chứa toàn bộ nội dung */
}

