        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add shadow to the image */
    }

    .promotion-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
        max-width: 600px;
    }

        .promotion-info h4 {
            font-size: 24px;
            color: #333;
        }

