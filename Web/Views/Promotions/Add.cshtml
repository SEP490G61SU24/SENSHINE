    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Promotion Form</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Add" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row g-3">
                                 <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PromotionName" class="control-label">Tên Khuyến Mãi</label>
                                    <input asp-for="PromotionName" class="form-control" />
                                    <span asp-validation-for="PromotionName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DiscountPercentage" class="control-label">Tỷ Lệ Giảm Giá</label>
                                    <input asp-for="DiscountPercentage" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label">Ngày Bắt Đầu</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label">Ngày Kết Thúc</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="toolbar-box">
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label">Mô Tả</label>
                                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-group d-flex">
                                    <input type="submit" value="Tạo Mới" class="btn btn-primary spacing-10px" />
                                    <a asp-action="ListPromotion" class="btn btn-secondary spacing-10px">Quay Lại Danh Sách</a>
                                </div>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



