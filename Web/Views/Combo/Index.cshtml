@model API.Ultils.PaginatedList<Web.Models.ComboViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a class="btn btn-primary" href="@Url.Action("CreateCombo", "Combo")">
                            <i class="fa fa-plus"></i> Thêm Combo mới
                        </a>
                    </div>
                    <div class="search-page">
                        <form class="theme-form mb-3" method="GET">
                            <div class="dataTables_length" id="table_length">
                                <label>
                                    Hiển thị
                                    <select aria-controls="table" class="" asp-for="PageSize" name="PageSize" id="PageSize" onchange="this.form.submit()">
                                        @foreach (var pSize in new List<(int Value, string Name)>
                                        {
                                        (Value: 5, Name: "5"),
                                        (Value: 10, Name: "10"),
                                        (Value: 25, Name: "25"),
                                        (Value: 50, Name: "50"),
                                        (Value: 100, Name: "100"),
                                        })
                                        {
                                            <option value="@pSize.Value" selected="@(pSize.Value == Model.PageSize ? "selected" : null)">@pSize.Name</option>
                                        }
                                    </select>
                                    bản ghi
                                </label>
                            </div>

                            <div class="input-group m-0 flex-nowrap">
                                <input class="form-control-plaintext" name="searchTerm" type="search" value="@(Model.SearchTerm ?? null)" placeholder="Nhập tên, số điện thoại ..."><button class="btn btn-primary input-group-text">Tìm kiếm</button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive custom-scrollbar">
                        <table class="display" id="comboTable">
                            <thead>
                                <tr>
                                    <th>Tên combo</th>
                                    <th>Số buổi</th>
                                    <th>Giá gốc</th>
                                    <th>Giảm giá</th>
                                    <th>Giá giảm</th>
                                    <th>Ghi chú</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr id="combo-@item.Id">
                                        <td><a href="#" class="comboTitle" data-id="@item.Id">@item.Name</a></td>
                                        <td>@item.Quantity</td>
                                        <td>@String.Format("{0:0,0} VND", @item.Price)</td>
                                        <td>@item.Discount</td> 
                                        <td>@String.Format("{0:0,0} VND", @item.SalePrice)</td>
                                        <td>@item.Note</td>
                                        <td>
                                            <div class="product-action">
                                                <button class="btn btn-primary btn-sm" data-id="@item.Id" onclick="editCombo(this)" style="height: 35px; width: 150px;">Edit</button>
                                                <button class="btn btn-danger btn-sm" data-id="@item.Id" onclick="confirmDelete(this)" style="height: 35px; width: 150px;">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="dataTables_wrapper no-footer">
                            <div class="dataTables_paginate paging_simple_numbers" id="table_paginate">
                                <a class="paginate_button previous @(Model.HasPreviousPage ? "" : "disabled")"
                                   aria-controls="table"
                                   href="@(Model.HasPreviousPage ? $"?searchTerm={Model.SearchTerm}&pageIndex={Model.PageIndex - 1}&pageSize={Model.PageSize}" : "javascript:void(0);")"
                                   id="table_previous">« Trước</a>

                                <span>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <a class="@(i == Model.PageIndex ? "paginate_button current" : "paginate_button")"
                                           aria-controls="table"
                                           href="?searchTerm=@Model.SearchTerm&pageIndex=@i&pageSize=@Model.PageSize"
                                           data-dt-idx="@i">@i</a>
                                    }
                                </span>

                                <a class="paginate_button next @(Model.HasNextPage ? "" : "disabled")"
                                   aria-controls="table"
                                   href="@(Model.HasNextPage ? $"?searchTerm={Model.SearchTerm}&pageIndex={Model.PageIndex + 1}&pageSize={Model.PageSize}" : "javascript:void(0);")"
                                   id="table_next">Tiếp »</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".comboTitle").click(function (event) {
            event.preventDefault();
            var comboId = $(this).data("id");

            $.ajax({
                url: '/Combo/GetComboDetail/' + comboId,
                method: 'GET',
                success: function (data) {
                    // Set default values for properties
                    var comboName = data.name || 'No Title';
                    var price = data.price !== null ? data.price.toFixed(2) : 'No Price';
                    var discount = data.discount !== null ? data.discount.toFixed(2) : 'No Discount';
                    var salePrice = data.salePrice !== null ? data.salePrice.toFixed(2) : 'No Sale Price';
                    var services = data.services || [];

                    // Update HTML elements with the API data
                    $("#comboName").text(comboName);
                    $("#comboPrice").text('Price: ' + price);
                    $("#comboDiscount").text('Discount: ' + discount);
                    $("#comboSalePrice").text('Sale Price: ' + salePrice);

                    // Update service list
                    var serviceList = $("#serviceList");
                    serviceList.empty();
                    $.each(services, function (index, service) {
                        serviceList.append('<li>' + service.name + ' - ' + service.price.toFixed(2) + '</li>');
                    });

                    $("#editComboBtn").data("id", comboId);
                    $("#deleteComboBtn").data("id", comboId);

                    // Show the detail section
                    $("#comboDetail").show();
                },
                error: function () {
                    alert("An error occurred while fetching the combo details.");
                }
            });
        });

        $("#editComboBtn").click(function () {
            var comboId = $(this).data("id");
            window.location.href = '/Combo/Edit/' + comboId;
        });

        $("#deleteComboBtn").click(function () {
            var comboId = $(this).data("id");

            if (confirm("Are you sure you want to delete this combo?")) {
                $.ajax({
                    url: '/Combo/Delete/' + comboId,
                    method: 'DELETE',
                    success: function (response) {
                        if (response.success) {
                            alert("Combo deleted successfully.");
                            $('#combo-' + comboId).remove();
                            $("#comboDetail").hide();
                        } else {
                            alert("Failed to delete the combo.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while deleting the combo.");
                    }
                });
            }
        });
    });

    function editCombo(button) {
        var comboId = $(button).data("id");
        window.location.href = '/Combo/Edit/' + comboId;
    }

    function confirmDelete(button) {
        var comboId = $(button).data("id");

        if (confirm("Are you sure you want to delete this combo?")) {
            $.ajax({
                url: '/Combo/Delete/' + comboId,
                method: 'DELETE',
                success: function (response) {
                    if (response.success) {
                        alert("Combo deleted successfully.");
                        $('#combo-' + comboId).remove();
                    } else {
                        alert("Failed to delete the combo.");
                    }
                },
                error: function () {
                    alert("An error occurred while deleting the combo.");
                }
            });
        }
    }
</script>

