<link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">

<div class="card">
    <div class="card-body">
<form asp-action="Create" method="post">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="form-group">
        <label>Phòng</label>
        <select asp-for="RoomId" class="form-control">
            @foreach (var room in ViewBag.Rooms)
            {
                <option value="@room.Id">@room.RoomName</option>
            }
        </select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tên giường</label>
        <input asp-for="BedNumber" class="form-control" />
        <span asp-validation-for="BedNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Trạng thái hoạt động</label>
        <select asp-for="StatusWorking" class="form-control">
            <option value="Available">Trống</option>
            <option value="Unavailable">Bận</option>
        </select>
        <span asp-validation-for="StatusWorking" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create</button>
</form>

    </div>
</div>


