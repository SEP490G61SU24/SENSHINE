@model IEnumerable<Web.Models.CategoryViewModel>

@{
    ViewBag.Title = "Category List";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a class="btn btn-primary" href="@Url.Action("Create", "Category")">
                            <i class="fa fa-plus"></i> Thêm Danh mục Mới
                        </a>
                    </div>

                    <div class="table-responsive custom-scrollbar">
                        <table class="display" id="comboTable">
                            <thead>
                                <tr>
                                    <th>Tên Danh mục</th>
                                    <th>Hành động</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="category-@item.Id">
                                        <td>@item.CategoryName</td>
                                        <td>
                                            <div class="product-action">
                                                <button class="btn btn-primary" data-id="@item.Id" onclick="editCategory(this)" style="height: 35px; width: 150px;">Edit</button>
                                                <button class="btn btn-danger" data-id="@item.Id" onclick="confirmDelete(this)" style="height: 35px; width: 150px;">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function editCategory(button) {
        var categoryId = $(button).data("id");
        window.location.href = '/Category/Edit/' + categoryId;
    }

    function confirmDelete(button) {
        var categoryId = $(button).data("id");

        if (confirm("Are you sure you want to delete this category?")) {
            $.ajax({
                url: '/Category/Delete/' + categoryId,
                method: 'DELETE',
                success: function (response) {
                    if (response.success) {
                        alert("Category deleted successfully.");
                        $('#category-' + categoryId).remove();
                    } else {
                        alert("Failed to delete the category.");
                    }
                },
                error: function () {
                    alert("An error occurred while deleting the category.");
                }
            });
        }
    }
</script>


