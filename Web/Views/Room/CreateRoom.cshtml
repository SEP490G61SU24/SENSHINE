@model Web.Models.RoomViewModel

@{
    ViewData["Title"] = "Tạo phòng";
}

<div class="card">
    <div class="card-body">
        <form asp-action="CreateRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12 position-relative">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <br />
            <div class="col-12">
                @if (ViewData["SpaId"] != null && ViewData["SpaId"].ToString() != "ALL")
                {
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-danger dark" role="alert">
                            <p>Bạn đang ở chế độ toàn bộ spa, không thể thêm. Hãy chọn chi nhánh SPA trước.</p>
                        </div>
                    </div>
                    <br />
                }
                
                <a href="@Url.Action("ListRoom", "Room")" class="btn btn-primary">Danh sách</a>
            </div>
        </form>
    </div>
</div>

