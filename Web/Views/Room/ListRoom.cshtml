@model IEnumerable<Web.Models.RoomViewModel>

@{
    ViewData["Title"] = "Quản lý phòng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="list-product-header">
                        <div>
                            <a class="btn btn-primary" href="@Url.Action("CreateRoom", "Room")"><i class="fa fa-plus"></i>Tạo phòng</a>
                        </div>
                    </div>
                    <div class="list-product">
                        <table class="table" id="project-status">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check">
                                            <input class="form-check-input checkbox-primary" type="checkbox">
                                        </div>
                                    </th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.RoomName)</span></th>
                                    <th> <span class="f-light f-w-600">@Html.DisplayNameFor(model => model.SpaName)</span></th>
                                    <th> <span class="f-light f-w-600">Thao tác</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@item.RoomName</td>
                                        <td>@item.SpaName</td>
                                        <td>
                                            @Html.ActionLink("Cập nhật", "UpdateRoom", new { id = item.Id }, new { @href = "http://localhost:5129/Room/UpdateRoom?id=" + item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

