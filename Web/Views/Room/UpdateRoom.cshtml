@model Web.Models.RoomViewModel

@{
    ViewData["Title"] = "Cập nhật phòng";
}

<div class="card">
    <div class="card-body">
        <form asp-action="UpdateRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" type="hidden">
                <input asp-for="Id" type="hidden" class="form-control" readonly />
                <span asp-validation-for="Id" type="hidden" class="text-danger"></span>
            </div>
            <div class="col-md-12 position-relative">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <b>Chọn chi nhánh</b>
            <div class="d-flex align-items-center">
                <select id="selectBranchId" asp-for="SpaId" class="form-control custom-select" asp-items="@ViewBag.Spas"></select>
                <span asp-validation-for="SpaId" class="text-danger custom-span"></span>
                <button onclick="window.open('/Branch/CreateBranch', '_blank')" class="btn btn-secondary custom-button">Tạo mới</button>
            </div>
            <br />
            <div class="col-12">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a href="@Url.Action("ListRoom", "Room")" class="btn btn-secondary">Danh sách</a>
            </div>
        </form>
    </div>
</div>

