@model Web.Models.BranchViewModel

@{
    ViewData["Title"] = "Chi tiết chi nhánh";
}

@{
    List<RoomViewModel> rooms = ViewBag.Rooms;
}

<div class="card">
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SpaName):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SpaName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProvinceCode):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProvinceName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DistrictCode):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DistrictName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WardCode):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WardName)
                </dd>
            </dl>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <div class="row">
                    @foreach (var room in rooms)
                    {
                        <div class="col-12 col-md-4 col-lg-2 mb-4 text-center">
                            <a href="@Url.Action("DetailRoom", "Room", new { id = room.Id })" class="room-icon" style="border: 2px solid black; padding: 10px; border-radius: 5px;">
                                <img src="https://cdn-icons-png.flaticon.com/512/248/248212.png" alt="Room Icon" class="img-fluid" />
                                <div class="room-name-overlay">
                                    @room.RoomName
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div>
            <a href="@Url.Action("ListBranch", "Branch")" class="btn btn-primary">Danh sách</a>
            <a href="@Url.Action("UpdateBranch", "Branch", new { id = Model.Id })" class="btn btn-primary">Cập nhật</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/feather-icon.css">
    <!-- Plugins css start-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/datatables.css">
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">

    <style>
        .room-icon {
            position: relative; /* Ensure the text can be positioned absolutely within this container */
            display: block;
            text-decoration: none;
            color: #000;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            background-color: #f8f9fa;
        }

            .room-icon img {
                width: 100px; /* Adjust width as needed */
                height: 100px; /* Adjust height as needed */
                object-fit: cover; /* Ensures the image covers the area without distortion */
                border-radius: 5px; /* Optional: adds rounded corners */
            }

        .room-name-overlay {
            position: absolute;
            top: 40%; /* Adjust to move the text higher or lower */
            left: 50%;
            transform: translate(-50%, -50%);
            color: #000; /* Change text color to black */
            font-weight: bold; /* Text style */
            font-size: 1rem; /* Adjust font size as needed */
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.6); /* Optional: adds shadow for better readability */
            text-align: center;
            pointer-events: none; /* Ensures that clicks go through the overlay to the link */
        }
    </style>
}

