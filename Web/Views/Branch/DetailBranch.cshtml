@model Web.Models.BranchViewModel

@{
    ViewData["Title"] = "Chi tiết chi nhánh";
}

@{
    List<RoomViewModel> rooms = ViewBag.Rooms;
    List<UserViewModel> users = ViewBag.Users;
    int numberOfRooms = rooms.Count;
    int numberOfEmployees = users.Count;
}

<div class="card">
    <div class="card-body">
        <!-- Spa Detail Section -->
        <div class="row">
            <div class="col-md-12" id="spa-detail">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SpaName):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.SpaName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProvinceCode):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProvinceName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DistrictCode):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.DistrictName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.WardCode):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.WardName)</dd>

                    <dt class="col-sm-2">Số lượng phòng:</dt>
                    <dd class="col-sm-10">@numberOfRooms</dd>

                    <dt class="col-sm-2">Số lượng nhân viên:</dt>
                    <dd class="col-sm-10">@numberOfEmployees</dd>
                </dl>
            </div>
        </div>

        <!-- Room Section -->
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Danh sách phòng</h5>
                <div class="row">
                    @foreach (var room in rooms)
                    {
                        <div class="col-12 col-md-4 col-lg-2 mb-4 text-center">
                            <a href="@Url.Action("DetailRoom", "Room", new { id = room.Id })" class="room-icon">
                                <img src="https://cdn-icons-png.flaticon.com/512/248/248212.png" alt="Room Icon" class="img-fluid" />
                                <div class="room-name-overlay">
                                    @room.RoomName
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Employee Table Section -->
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Danh sách nhân viên</h5>
                <div id="employee-table">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Tên nhân viên</th>
                                <th>Chức danh</th>
                                <th>Số điện thoại</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in users)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.Phone</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div>
            <a href="@Url.Action("ListBranch", "Branch")" class="btn btn-primary">Danh sách</a>
            <a href="@Url.Action("UpdateBranch", "Branch", new { id = Model.Id })" class="btn btn-primary">Cập nhật</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/feather-icon.css">
    <!-- Plugins css start-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/datatables.css">
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">

    <style>
        #spa-detail {
            margin-bottom: 20px;
        }

        #employee-table {
            max-height: 400px;
            overflow-y: auto;
        }

        .room-icon {
            display: block;
            text-decoration: none;
            color: #000;
            padding: 10px;
            border: 2px solid #dee2e6;
            border-radius: 5px;
            background-color: #f8f9fa;
        }

            .room-icon img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 5px;
            }

        .room-name-overlay {
            margin-top: 10px;
            font-weight: bold;
            font-size: 1rem;
            color: #333;
        }

        /* Scrollbar style for the employee table */
        #employee-table::-webkit-scrollbar {
            width: 8px;
        }

        #employee-table::-webkit-scrollbar-thumb {
            background-color: #888;
            border-radius: 4px;
        }

            #employee-table::-webkit-scrollbar-thumb:hover {
                background-color: #555;
            }
    </style>
}

