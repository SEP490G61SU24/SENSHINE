@model Web.Models.CardViewModel

@{
    ViewData["Title"] = "Chi tiết thẻ";
}

@{
    List<CardComboViewModel> cardCombos = ViewBag.CardCombos;
    string branchName = ViewBag.BranchName;
}

<div class="card">
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CardNumber):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CardNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerName):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerPhone):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerPhone)
                </dd>
                <dt class="col-sm-2">
                    Chi nhánh:
                </dt>
                <dd class="col-sm-10">
                    @branchName
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreateDate):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Combo</th>
                            <th>Số buổi đã sử dụng</th>
                            <th>Số buổi còn lại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cardCombo in cardCombos)
                        {
                            <tr>
                                <td>@cardCombo.ComboName</td>
                                <td>@cardCombo.SessionDone</td>
                                <td>@cardCombo.SessionLeft</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <a href="@Url.Action("ListCard", "Card")" class="btn btn-secondary">Danh sách</a>
            <a href="@Url.Action("UpdateCard", "Card", new { id = Model.Id })" class="btn btn-secondary">Cập nhật</a>
        </div>
    </div>
</div>
