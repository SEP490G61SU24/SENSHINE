<link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">

<div class="card">
    <div class="card-header">
        Service Information
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Service ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Service Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ServiceName)</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Amount)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a class="btn btn-primary" asp-action="EditService" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="ListService">Back to List</a>
</div>

