@model IEnumerable<Web.Models.ServiceViewModel>

@{
    ViewData["Title"] = "ListService";
}
<div>
    <p>
        <a asp-action="CreateService">Add New Service</a>
    </p>

    <div>
        <form asp-action="ListService" method="get">
            <div class="form-group">
                <input type="text" name="searchString" class="form-control" placeholder="Nhập dịch vụ cần tìm kiếm...">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditService", new { id = item.Id }) |
                        @Html.ActionLink("Details", "DetailService", new { id = item.Id }) |
                        <form asp-action="DeleteService" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this service?');">
                            <button type="submit" class="btn-link">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>