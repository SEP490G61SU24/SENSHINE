<p>
    <a href="@Url.Action("CreateAppointment", "Appointment")">Add New Appointment</a>
</p>


<form asp-controller="Appointment" asp-action="ListAppointment" method="get">
</form>

<table class="table">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Customer Name</th>
            <th>Employee Name</th>
            <th>Services</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Customer.FullName</td>
                <td>@appointment.Employee.FullName</td>
                <td>
                    <ul>
                        @foreach (var service in appointment.Services)
                        {
                            <li>@service.ServiceName</li>
                        }
                    </ul>
                </td>
                <td>@appointment.AppointmentDate.ToShortDateString()</td>
                <td>@(appointment.Status ? "Finished" : "Not Started")</td>
                <td>
                    <a asp-action="DetailAppointment" asp-route-id="@appointment.Id">Details</a> |
                    <a asp-action="EditAppointment" asp-route-id="@appointment.Id">Edit</a> |
                    <form asp-action="DeleteAppointment" asp-route-id="@appointment.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

