@model Web.Models.AppointmentViewModel

@{
    ViewData["Title"] = "Chỉnh sửa cuộc hẹn";
    var services = ViewBag.Services as List<Web.Models.ServiceViewModel>;
    var products = ViewBag.Products as List<Web.Models.ProductViewModel>;
    var customers = ViewBag.Customers as List<API.Dtos.UserDTO>;
    var employees = ViewBag.Employees as List<Web.Models.EmployeeViewModel>;
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="EditAppointment" method="post">

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Tên Khách Hàng</label>
                    <select asp-for="CustomerId" class="form-control" id="customerSelect">
                        <option value="">Select Customer</option>
                        @if (customers != null)
                        {
                            @foreach (var customer in customers)
                            {
                                <option value="@customer.Id">@customer.FirstName @customer.MidName @customer.LastName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label">Nhân Viên Phục Vụ</label>
                    <select asp-for="EmployeeId" class="form-control" id="employeeSelect">
                        @if (employees != null)
                        {
                            @foreach (var employee in employees)
                            {
                                <option value="@employee.Id">@employee.FirstName @employee.MidName @employee.LastName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AppointmentDate" class="control-label">Thời Gian Cuộc Hẹn</label>
                    <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SelectedServiceIds" class="control-label">Dịch Vụ Sử Dụng</label>
                    <select asp-for="SelectedServiceIds" class="form-control" multiple id="serviceSelect">
                        @if (services != null)
                        {
                            @foreach (var service in services)
                            {
                                <option value="@service.Id">@service.ServiceName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="SelectedServiceIds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SelectedProductIds" class="control-label">Sản Phẩm Sử Dụng</label>
                    <select asp-for="SelectedProductIds" class="form-control" id="productSelect">
                        @if (products != null)
                        {
                            @foreach (var product in products)
                            {
                                <option value="@product.Id">@product.ProductName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="SelectedProductIds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng Thái</label>
                    <select asp-for="Status" class="form-control" id="statusSelect">
                        <option value="Cancel">Cancelled</option>
                        <option value="Pending">Pending</option>
                        <option value="Doing">Doing</option>
                        <option value="Combo">Combo Order</option>
                        <option value="Finished">Finished</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-action="ListAppointment" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

