    <script>
        $(document).ready(function () {
            // Load danh sách phòng dựa vào spaId
            $.ajax({
                url: 'http://localhost:5297/api/Room/GetBySpaId/BySpaId/1',  // Đường dẫn API đúng
                type: 'GET',
                success: function (rooms) {
                    rooms.forEach(room => {
                        $('#provinceDropdown').append(new Option(room.roomName, room.id));
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Failed to load rooms:", error);
                }
            });

            // Khi thay đổi chọn phòng
            $('#provinceDropdown').change(function () {
                var roomId = $(this).val();  // Lấy roomId từ dropdown
                if (roomId) {
                    // Gọi API để lấy danh sách giường dựa vào roomId
                    $.ajax({
                        url: `http://localhost:5297/api/Bed/GetByRoomId/ByRoomId/${roomId}`,  // Sử dụng roomId để gọi API
                        type: 'GET',
                        success: function (beds) {
                            // Làm rỗng danh sách giường và thêm option mặc định
                            $('#districtDropdown').empty().append('<option selected disabled value="">Chọn...</option>');
                            // Thêm các giường thuộc roomId đã chọn
                            beds.forEach(bed => {
                                $('#districtDropdown').append(new Option(bed.bedNumber, bed.roomId));
                            });
                        },
                        error: function (xhr, status, error) {
                            console.error("Failed to load beds:", error);
                        }
                    });
                }
            });
        });
    </script>
}